rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Cards collection - Allow read/write for the single card
    match /cards/{cardId} {
      // Allow anyone to read card data (for viewing the card via link)
      allow read: if true;
      
      // Allow write only from your domain (you can edit this in edit mode)
      // Since there's no auth, we allow writes for now
      // You can add more restrictions later if needed
      allow write: if true;
    }
    
    // Links collection - Manage custom links
    match /links/{linkId} {
      // Allow anyone to read links (to check availability and view cards)
      allow read: if true;
      
      // Allow creating new links
      allow create: if true;
      
      // Allow updating only the views field (for incrementing view count)
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['views']);
      
      // Prevent deletion (you can manually delete from Firebase console if needed)
      allow delete: if false;
    }
  }
}
